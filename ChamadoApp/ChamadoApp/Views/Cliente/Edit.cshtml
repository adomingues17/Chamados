@model Cliente
<form method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Editar Cadastro do Cliente</h2>

        @foreach(var modelErro in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="text-danger">
                <!--****************-->
                ! @modelErro.ErrorMessage  
            </div>
        }

        <div class="mb-3">
            <label asp-for="Nome" class="p-0"></label>
            <input asp-for="Nome" class="form-control"/>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email" class="p-0"></label>
            
           
        </div>






    </div>
</form>